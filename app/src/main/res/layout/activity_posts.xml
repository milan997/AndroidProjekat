<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alowishusad.androidprojekat.PostsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCreatePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnStartsCreatePostActivity"
            android:text="@string/createPost"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="142dp" />

        <Button
            android:id="@+id/btnReadPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnStartsReadPostActivity"
            android:text="@string/readPost"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="142dp" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnStartsSettingsActivity"
            android:text="@string/settings"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="142dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
